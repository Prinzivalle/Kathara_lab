# subnet A
auto eth0
iface eth0 inet static
	address 1.0.1.2
	netmask 255.255.255.254
	gateway 1.0.1.3

# subnet E
auto eth1
iface eth1 inet static
	address 1.0.1.10
	netmask 255.255.255.254

# subnet D
auto eth2
iface eth2 inet static
	address 1.0.1.8
	netmask 255.255.255.254

# up route add -net 1.0.1.3 netmask 255.255.255.254 dev eth0